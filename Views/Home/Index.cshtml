@model WebAppConfiguration.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div>
    <ul>
        <li><b>Display Name</b>: @Model.PortalOptions.DisplayName</li>
        <li>
            <b>Adapters</b>:
            <ul>
                @foreach (var adapter in Model.Adapters)
                {
                    <li>@adapter.DisplayName</li>
                }
            </ul>
        </li>
    </ul>
</div>